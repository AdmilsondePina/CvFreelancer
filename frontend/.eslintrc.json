{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "globals": {
      "process": "readonly"
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "react-hooks"
    ],
    "rules": {
      "no-useless-escape": "off",
      "no-unused-vars": "warn", // ou "off" se quiser ignorar todas as variáveis não usadas
      "no-prototype-builtins": "off",
      "react/display-name": "off",
      "react/prop-types": "off",
      "react/jsx-key": "off",
      "react/react-in-jsx-scope": "off"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  
  
  
  
